<Window x:Class="Checkers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkers"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1366">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/checkers.png"/>
        </Grid.Background>

        <TextBox Text="Checkers" Margin="10,80,628,519" Opacity="100" TextChanged="TextBox_TextChanged" FontSize="90" TextAlignment="Center" FontFamily="Elephant" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <Button Content="Play" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Margin="170,295,790,347" Background="{x:Null}" FontSize="68" FontFamily="Elephant" BorderBrush="Black" Click="Play_Click"/>
        <Button Content="About" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Margin="170,460,790,187" Background="{x:Null}" FontSize="68" FontFamily="Elephant" BorderBrush="Black" Click="About_Click"/>
    </Grid>
</Window>
